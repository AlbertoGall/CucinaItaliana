<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.alberto.cucinaitaliana.MultipleChoiceActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/question_multiple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:padding="8dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="24dp"
        android:lines="2"
        android:gravity="center_horizontal"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RadioButton
            android:id="@+id/answers_1"
            style="@style/AnswerMultipleChoice" />
        <RadioButton
            android:id="@+id/answers_2"
            style="@style/AnswerMultipleChoice" />
        <RadioButton
            android:id="@+id/answers_3"
            style="@style/AnswerMultipleChoice" />
        <RadioButton
            android:id="@+id/answers_4"
            style="@style/AnswerMultipleChoice" />
    </RadioGroup>

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="40dp"
        android:text="@string/next_button"/>

</LinearLayout>